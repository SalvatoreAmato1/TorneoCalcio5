<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TorneoCalcio5.interfacciagrafica.ModificaPartitaController">
   <children>
      <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #2c3e50;">
               <children>
                  <Label textFill="WHITE">
                     <font><Font name="System Bold" size="20.0" /></font>
                  </Label>
               </children>
            </HBox>

            <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label fx:id="lblSquadraCasa" text="SQUADRA A" textFill="#2980b9">
                                 <font><Font name="System Bold" size="16.0" /></font>
                              </Label>
                              <TextField fx:id="txtGolCasa" alignment="CENTER" prefWidth="60.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="0" />
                           </children>
                        </VBox>

                        <Label text="VS">
                           <font><Font name="System Bold" size="24.0" /></font>
                           <padding><Insets top="25.0" /></padding>
                        </Label>

                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label fx:id="lblSquadraOspite" text="SQUADRA B" textFill="#c0392b">
                                 <font><Font name="System Bold" size="16.0" /></font>
                              </Label>
                              <TextField fx:id="txtGolOspite" alignment="CENTER" prefWidth="60.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button onAction="#handleAnnulla" prefWidth="100.0" text="ANNULLA" />
                        <Button onAction="#handleSalva" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="CONFERMA" />
                     </children>
                  </HBox>
               </children>
               <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
